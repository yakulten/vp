<!DOCTYPE html>
<html>
<head>
  <% include _head.ejs %>
</head>
<body ng-app="valuepotion" class="vp-app">
  <div class="vp-side">
    <% include _side.ejs %>
  </div>
  <div class="vp-body">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a href="#" class="navbar-brand">APPS - AUDIENCE</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-left">
            <li>
              <a href="#"></a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="#"><img src="//media-cache-ec0.pinimg.com/70x/e1/1b/6c/e11b6cc557894fae8aad1a631fe6e5d5.jpg" width="24" height="24" class="img-circle" style="margin:-10px 0 -10px 20px"> Cras sit amet</a>
            </li>
            <li>
              <a href="#"><i class="fa fa-cog fa-lg"><span class="caret"></span></i></a>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container-fluid card">
      <div class="row page-header">
        <div class="col-md-6">
          <h3 class="h4">REPORTING</h3>
        </div>
        <div class="col-md-6">
          <form class="form-horizontal row">
            <div class="col-sm-3 text-right col-sm-offset-3">
              <label class="control-label text-muted">Reporting on:</label>
            </div>
            <div class="col-sm-3">
              <select class="form-control">
                <option>Month</option>
                <option>Week</option>
                <option>Day</option>
                <option>Duration</option>
              </select>
            </div>
            <div class="col-sm-3">
              <select class="form-control">
                <option>All user</option>
              </select>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%
      var config = {
        options: {
          chart: {
            type: "line",
            height: 242
          }
        },
        xAxis: {
          type: "datetime"
        }
      };
    %>
    <div class="container-fluid card" ng-controller="ChartsController" data-url="/public/json/users.json" data-config="<%= JSON.stringify(config) %>">
      <div class="row page-header">
        <div class="col-md-6">
          <h4 class="h4">USERS</h4>
        </div>
        <div class="col-md-6">
          <form class="form-horizontal row">
            <div class="col-sm-3 col-sm-offset-6">
              <select class="form-control">
                <option>Month</option>
                <option>Week</option>
                <option>Day</option>
                <option>Duration</option>
              </select>
            </div>
            <div class="col-sm-3">
              <select class="form-control">
                <option>All user</option>
              </select>
            </div>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-9">
          <highchart type="chart" config="config"></highchart>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <% for(var i = 0; i < 3; i++){ %>
                <td>
                  <div class="media">
                    <div class="pull-left">
                      <i class="fa fa-calendar fa-2x fa-border"></i>
                    </div>
                    <div class="media-body">
                      <span style="display:block;line-height:1.2em">LAST MONTH</span>
                      <small>1. Jul - 31. Jul</small>
                    </div>
                  </div>
                  <span style="font-size:2.5em;line-height:1.3em;font-weight:100"><%= Math.floor(Math.random() * 200 + 100) %></span>
                </td>
                <% } %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%
      var config = {
        options: {
          chart: {
            type: "pie",
            height: 242
          },
          legend: {
            labelFormat: "{name} - {y}%"
          }
        },
        series: [{
          data: [ { name: "Male", y: 62 }, { name: "Female", y: 38, color: "#2a2a33" } ]
        }]
      };
    %>
    <div class="container-fluid card">
      <div class="row">
        <div class="col-sm-9">
          <div class="row">
            <%
              var config = {
                options: {
                  chart: {
                    type: "pie",
                    height: 242,
                    marginTop: 60
                  },
                  legend: {
                    labelFormat: "{name} - {y}%"
                  }
                },
                series: [{
                  name: "Gender",
                  data: [ { name: "Male", y: 62 }, { name: "Female", y: 38, color: "#2a2a33" } ]
                }]
              };
            %>
            <div class="col-md-4" ng-controller="ChartsController" data-config="<%= JSON.stringify(config) %>">
              <div class="row page-header">
                <div class="col-md-6">
                  <h4 class="h4">GENDER</h4>
                </div>
                <div class="col-md-6 text-right">
                  <button class="btn btn-default"><i class="fa fa-download"></i></button>
                </div>
              </div>
              <highchart config="config"></highchart>
            </div>
            <%
              var config = {
                options: {
                  chart: {
                    height: 242,
                    marginTop: 60
                  }
                },
                series: [{
                  type: "pie",
                  name: "Conutry",
                  data: [ { name: "Korea", y: 89.2 }, { name: "Japan", y: 6.4, color: "#2a2a33" }, { name: "Singapore", y: 3.5 }, { name: "Others", y: .8, color: "#adbdc4" } ]
                }]
              };
            %>
            <div class="col-md-4" ng-controller="ChartsController" data-config="<%= JSON.stringify(config) %>">
              <div class="row page-header">
                <div class="col-md-6">
                  <h4 class="h4">COUNTRY</h4>
                </div>
                <div class="col-md-6 text-right">
                  <button class="btn btn-default"><i class="fa fa-download"></i></button>
                </div>
              </div>
              <highchart config="config"></highchart>
            </div>
            <%
              var config = {
                options: {
                  chart: {
                    type: "pie",
                    height: 242,
                    marginTop: 60
                  }
                },
                series: [{
                  name: "PLAY TIME",
                  data: [ { name: "Heavy", y: 42.1 }, { name: "Light", y: 34.4, color: "#2a2a33" }, { name: "Non", y: 3.5 }, { name: "Others", y: .8, color: "#adbdc4" } ]
                }]
              };
            %>
            <div class="col-md-4" ng-controller="ChartsController" data-config="<%= JSON.stringify(config) %>">
              <div class="row page-header">
                <div class="col-md-6">
                  <h4 class="h4">PLAY TIME</h4>
                </div>
                <div class="col-md-6 text-right">
                  <button class="btn btn-default"><i class="fa fa-download"></i></button>
                </div>
              </div>
              <highchart config="config"></highchart>
            </div>
          </div>
        </div>
        </div>
      </div>
  </div>
</body>
</html>
